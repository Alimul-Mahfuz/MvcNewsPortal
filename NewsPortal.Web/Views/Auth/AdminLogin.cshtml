@model NewsPortal.Web.ViewModels.AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">Admin Login</h3>

                    <form method="post" asp-controller="Auth" asp-action="AdminLogin">
                        @Html.AntiForgeryToken()

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-floating mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="name@example.com" required>
                            <label asp-for="Email">Email address</label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
                            <label asp-for="Password">Password</label>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="#">Forgot password?</a>
                    </div>
                </div>
            </div>

            <p class="mt-4 text-center text-muted">
                Copyright &copy; NewsPortal Website @DateTime.Now.Year
            </p>
        </div>
    </div>
</div>