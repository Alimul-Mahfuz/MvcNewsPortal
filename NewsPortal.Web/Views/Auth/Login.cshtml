@model NewsPortal.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f8fa; /* soft, neutral background */
    }

    .login-card {
        background-color: #ffffff; /* white card */
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08); /* subtle shadow */
    }

    .login-card h3 {
        font-weight: 500;
        color: #333333;
    }

    .form-floating input {
        height: 48px;
    }

    .btn-login {
        background-color: #6c757d; /* subtle gray */
        color: #fff;
        font-weight: 500;
        transition: 0.3s;
    }

    .btn-login:hover {
        background-color: #5a6268;
    }

    .footer-text {
        color: rgba(0, 0, 0, 0.5);
    }

    a.text-muted-link {
        color: #6c757d;
        text-decoration: none;
    }

    a.text-muted-link:hover {
        color: #495057;
        text-decoration: underline;
    }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="login-card">
            <h3 class="text-center mb-4">Login</h3>

            <form method="post" asp-controller="Auth" asp-action="UserLogin">
                @Html.AntiForgeryToken()

                <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>

                <div class="form-floating mb-3">
                    <input type="email" asp-for="Email" class="form-control" placeholder="name@example.com" required>
                    <label asp-for="Email">Email address</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
                    <label asp-for="Password">Password</label>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-login btn-lg">Login</button>
                </div>

                <div class="text-center mb-3">
                    <a href="#" class="text-muted-link">Forgot password?</a>
                </div>
            </form>
        </div>

        <p class="mt-4 text-center footer-text">
            &copy; NewsPortal Website @DateTime.Now.Year
        </p>
    </div>
</div>
